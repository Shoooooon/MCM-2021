df_firecluster2012["fires_cart"] = df_firecluster2012.apply(lambda x:transform(x.fires_geodetic,x.centroid_geodetic), axis=1)
df_firecluster2012["centroid.cart"] = df_firecluster.apply(lambda x:(0,0), axis=1)

